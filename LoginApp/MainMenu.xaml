<Window x:Class="LoginApp.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginApp"
        mc:Ignorable="d"
        Title="Main Menu - Tower Defence" Height="460" Width="360" Background="White" ResizeMode="NoResize">
    <Border Background="#FF2D3237" CornerRadius="10" Margin="10">
        <StackPanel Margin="20">
            <Label Content="Welcome to" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="30"/>
            <Label Content="Tower Defence" Margin="0 -10 0 10" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="30"/>
            <Separator Margin="4"/>
            <Button x:Name="btnPlay" Content="Play" FontWeight="Bold" FontSize="24" Margin="50 20" Padding="5" Height="46" Click="btnPlay_Click"/>
            <Button x:Name="btnHighscore" Content="Highscore" FontWeight="Bold" FontSize="24" Margin="50 20" Height="46" Click="btnHighscore_Click"/>
            <Button x:Name="btnLogout" Content="Logout" FontWeight="Bold" FontSize="24" Margin="50 20" Height="46" Click="btnLogout_Click"/>
        </StackPanel>
    </Border>
</Window>
